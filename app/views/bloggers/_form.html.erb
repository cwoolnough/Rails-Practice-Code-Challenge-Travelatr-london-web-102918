<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
    <p style="color: red;"> <%= e %> </p>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.submit %>
<% end %>
