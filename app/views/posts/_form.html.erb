<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
    <p style="color: red;"> <%= e %> </p>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.label :likes %>
    <%= f.text_field :likes %>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name, prompt: "Select a Blogger" %>
    <%= f.collection_select :destination_id, @destinations, :id, :name, prompt: "Select a Destination" %>

    <%= f.submit %>
<% end %>